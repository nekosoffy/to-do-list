{
    "extends": ["airbnb", "prettier"],
    "plugins": ["prettier"],
    "parserOptions": {
        "project": "./tsconfig.json"
    },
    "rules": {
        //We can specify more rules that we need here
      "prettier/prettier": ["error"],
      "import/extensions": ["error", "ignorePackages", { "js": "never", "jsx": "never", "ts": "never", "tsx": "never" }]
    },
    "env": {
        "browser": true,
        "node": true
    }
      }